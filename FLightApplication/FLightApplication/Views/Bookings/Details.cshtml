@model FlightManagement.DataModel.Booking

@{
    ViewData["Title"] = "Details";
}

<h1 style="color: #008080; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; text-align: center;">Details</h1>

<div style="background-color: #F5F5F5; padding: 20px;">
    <h4 style="color: #008080; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: #008080; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2" style="color: #008080; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            @Html.DisplayNameFor(model => model.FlightId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightId)
        </dd>
        <dt class="col-sm-2" style="color: #008080; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            @Html.DisplayNameFor(model => model.SeatId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatId)
        </dd>
        <dt class="col-sm-2" style="color: #008080; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            @Html.DisplayNameFor(model => model.TicketId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketId)
        </dd>
    </dl>
</div>
<div style="margin-top: 10px;">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary" style="background-color: #008080; color: #fff;">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary" style="background-color: #DCDCDC; color: #000;">Back to List</a>
</div>