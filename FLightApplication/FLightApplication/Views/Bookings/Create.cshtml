@model FlightManagement.DataModel.Booking

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-color:aquamarine;   
    }
    /* Set the font size and line height for all text on the page */
    body {
        font-size: 18px;
        line-height: 1.5;
    }

    /* Add a background color and padding to the form */
    form {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    /* Style the form labels */
    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    /* Style the form input fields */
    input[type=text], input[type=number] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    /* Style the form submit button */
    input[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    /* Style the validation error messages */
    .text-danger {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

    /* Style the link to go back to the list */
    a {
        color: #4CAF50;
        text-decoration: none;
        font-size: 16px;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h1>Time to enjoy a new adventure</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightId" class="control-label"></label>
                <input asp-for="FlightId" class="form-control" />
                <span asp-validation-for="FlightId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatId" class="control-label"></label>
                <input asp-for="SeatId" class="form-control" />
                <span asp-validation-for="SeatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketId" class="control-label"></label>
                <input asp-for="TicketId" class="form-control" />
                <span asp-validation-for="TicketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
