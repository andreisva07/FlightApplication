@model FlightManagement.DataModel.Booking

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid bg-light py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">Delete Booking</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Are you sure you want to delete this booking?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">Username:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>
                        <dt class="col-sm-2">Flight ID:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.FlightId)</dd>
                        <dt class="col-sm-2">Seat ID:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.SeatId)</dd>
                        <dt class="col-sm-2">Ticket ID:</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.TicketId)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="row justify-content-center">
                            <div class="col-6">
                                <button type="submit" class="btn btn-danger btn-block">Delete</button>
                            </div>
                            <div class="col-6">
                                <a asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>