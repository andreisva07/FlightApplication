@model FlightManagement.DataModel.Booking

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-5">Edit Booking</h1>

<div class="container-fluid bg-light py-5" style="background-color: #00BFFF;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <form asp-action="Edit" class="border p-4" style="background-color: #F0FFF0; border-color: #00FA9A;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="font-weight-bold" style="color: #006400;">Name:</label>
                    <input asp-for="UserName" class="form-control" style="background-color: #F0FFF0; border-color: #00FA9A; color: #006400;" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FlightId" class="font-weight-bold" style="color: #006400;">Flight ID:</label>
                    <input asp-for="FlightId" class="form-control" style="background-color: #F0FFF0; border-color: #00FA9A; color: #006400;" />
                    <span asp-validation-for="FlightId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SeatId" class="font-weight-bold" style="color: #006400;">Seat ID:</label>
                    <input asp-for="SeatId" class="form-control" style="background-color: #F0FFF0; border-color: #00FA9A; color: #006400;" />
                    <span asp-validation-for="SeatId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TicketId" class="font-weight-bold" style="color: #006400;">Ticket ID:</label>
                    <input asp-for="TicketId" class="form-control" style="background-color: #F0FFF0; border-color: #00FA9A; color: #006400;" />
                    <span asp-validation-for="TicketId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block" style="background-color: #006400; border-color: #00FA9A;">Save</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-12 col-md-6">
            <a asp-action="Index" class="btn btn-secondary btn-lg btn-block" style="background-color: #006400; border-color: #00FA9A;">Cancel</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}