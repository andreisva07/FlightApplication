@model FlightManagement.DataModel.Passenger

@{
    ViewData["Title"] = "Create";
}

<style>
   body{
       background-color:aquamarine;
   }
    h1 {
        font-size: 36px;
        margin-top: 30px;
        margin-bottom: 20px;
        text-align: center;
    }

    hr {
        border: 1px solid #ddd;
        margin: 20px 0;
    }

    .row {
        display: flex;
        justify-content: center;
    }

    .col-md-4 {
        width: 30%;
        margin: 20px;
    }

    label.control-label {
        font-weight: bold;
    }

    .form-control {
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
        box-shadow: none;
    }

    input[type="submit"].btn-primary {
        background-color: #4CAF50;
        color: #fff;
        border-color: #4CAF50;
        font-size: 16px;
        padding: 8px 20px;
    }

    a {
        color: #4CAF50;
        text-decoration: none;
        font-size: 24px;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    .text-danger {
        color: red;
    }
</style>
<h1>Passenger</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <input asp-for="PassengerName" class="form-control" />
                <span asp-validation-for="PassengerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerSurname" class="control-label"></label>
                <input asp-for="PassengerSurname" class="form-control" />
                <span asp-validation-for="PassengerSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
